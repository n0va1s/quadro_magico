{% extends 'leiaute.twig' %}
{% block conteudo %}
    <!-- Main Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <form name="frmListaQuadro" action="{{ path('quadroListar')}}" method="POST">
                    <h4>Informe o seu email</h4>
                    <label for="email" class="sr-only">Email</label>
                    <input type="email" name="email" class="col-lg-12" placeholder="Informe seu email" required 
                    data-validation-required-message="Qual o seu email?">
                    <div>&nbsp;</div>
                    <center><button class="btn btn-primary" type="submit">Consultar</button><center>
                    <br />
                </form>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                {% if quadros is defined %}
                    {% if quadros.mensagem is defined %}
                        <div class="post-preview">
                        <br /><p class="post-meta" align="center">{{quadros.mensagem}}</p>
                        </div>
                    {% else %}
                        {% for quadro in quadros %}
                        <div class="post-preview">
                            <span>Quadro de <b>{{quadro.tipo == 'C' ? "comportamento" : "mesada"}}</b> para <b>{{ quadro.crianca }}</b></span><br />
                            <a class="post-meta" href= {{app.url_generator.generate('quadroExibir', {'codigo':quadro.codigo})}}>quadromagico.com.br{{app.url_generator.generate('quadroExibir', {'codigo':quadro.codigo})}}</a>
                            <a href="{{ path('quadroExcluir',{codigo:quadro.codigo})}}"><span class="glyphicon glyphicon-remove"></span></a>
                        </div>
                        {% endfor %}
                    {% endif %}
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}

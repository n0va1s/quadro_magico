{% extends 'leiaute.twig' %}
{% block conteudo %}
<div class="container">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
            <form name="frmContato" action="contato/gravar" novalidate>
                <h4>Quer falar com a gente?</h4>
                <label for="nome" class="sr-only">Nome</label>
                <input type="text" class="col-lg-4" placeholder="Nome" id="nome" required data-validation-required-message="Por favor informe seu nome" autofocus>
                <label for="email" class="sr-only">Email</label>
                <input type="email" class="col-lg-4" placeholder="Email" id="email" required data-validation-required-message="Por favor informe seu email">
                <label for="fone" class="sr-only">Celular</label>
                <input type="tel" class="col-lg-4" placeholder="Celular" id="telefone" required data-validation-required-message="Por favor informe seu celular para tirarmos dÃºvidas">
                <label for="mensagem" class="sr-only">Mensagem</label>
                <textarea rows="5" class="form-control" placeholder="Mensagem" id="menssagem" required data-validation-required-message="Esqueceu a mensagem"></textarea>
                <!--<div class="checkbox">
                    <label><input type="checkbox" value="remember-me"> Remember me</label>
                </div>-->
                <br />
                <center>
                    <button class="btn btn-primary" type="submit">Envie</button>
                <center>
            </form>
        </div>
    </div>
</div>
{% endblock %}
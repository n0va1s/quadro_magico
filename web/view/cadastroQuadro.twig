{% extends 'leiaute.twig' %}
{% block conteudo %}
    <!-- Main Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <form name="frmQuadro" action="{{ path('quadroSalvar')}}" method="POST">
                    <h4>Crie o seu quadro</h4>
                    <label for="email" class="sr-only">Email</label>
                    <input type="email" name="email" class="col-lg-12" placeholder="Informe seu email" required 
                    data-validation-required-message="Qual o seu email?" value="{% if quadro is defined %}{{ quadro.email }}{% endif %}" autofocus>
                    <label for="tipo" class="sr-only">Tipo de quadro</label>
                    <select name="tipo"  class="col-lg-4">
                        <option>Um quadro de</option>
                        <option value="T" {% if quadro is defined and quadro.tipo == 'T' %} selected {% endif %}>Tarefa</option>
                        <option value="M" {% if quadro is defined and quadro.tipo == 'M' %} selected {% endif %}>Mesada</option>
                    </select>
                    <select name="genero" class="col-lg-4">
                        <option>Para</option>
                        <option value="M" {% if quadro is defined and quadro.genero == 'M' %} selected {% endif %}>um menino</option>
                        <option value="F" {% if quadro is defined and quadro.genero == 'F' %} selected {% endif %}>uma menina</option>
                    </select>
                    <label for="idade" class="sr-only">Idade</label>
                    <input type="number" name="idade" class="col-lg-4" placeholder="Com XX anos" required data-validation-required-message="Quantos anos ele ou ela tem?" value="{% if quadro is defined %}{{ quadro.idade }}{% endif %}">
                    <label for="nome" class="sr-only">Nome</label>
                    <input type="text" name="crianca" class="col-lg-12" placeholder="Chamado (a)" required data-validation-required-message="Qual o nome dele ou dela?" value="{% if quadro is defined %}{{ quadro.crianca }}{% endif %}">
                    <label for="nome" class="sr-only">Recompensa</label>
                    <input type="text" name="recompensa" class="col-lg-12" placeholder="Para quadros de tarefa, qual a recompensa combinada?" value="{% if quadro is defined %}{{ quadro.recompensa }}{% endif %}">
                    <div>&nbsp;</div>
                    <center>
                        <button class="btn btn-primary" type="submit">Criar</button>
                    <center>
                    <input type="hidden" name="id" value="{% if id is defined %} {{ id }} {% endif %}">
                </form>
            </div>
        </div>
    </div>
{% endblock %}

{% extends 'leiaute.twig' %}
{% block conteudo %}
    <!-- Main Content -->
    <div class="container">
        <div class="row">
            <p>Oi <b>{{quadro.crianca}}</b>, vamos ganhar um pedido especial? Complete todas as atividades do dia e ganhe um coração.</p>
            {% if atividades is defined %}
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>&nbsp;</th>
                            <th>Tarefa</th>
                            <th>Valor</th>
                            <th>Seg</th>
                            <th>Ter</th>
                            <th>Qua</th>
                            <th>Qui</th>
                            <th>Sex</th>
                            <th>Sáb</th>
                            <th>Dom</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>&nbsp;</th>
                            <th>&nbsp;</th>
                            <th>&nbsp;</th>
                            <th><span class="glyphicon glyphicon-heart-empty"></span></th>
                            <th><span class="glyphicon glyphicon-heart-empty"></span></th>
                            <th><span class="glyphicon glyphicon-heart-empty"></span></th>
                            <th><span class="glyphicon glyphicon-heart-empty"></span></th>
                            <th><span class="glyphicon glyphicon-heart-empty"></span></th>
                            <th><span class="glyphicon glyphicon-heart-empty"></span></th>
                            <th><span class="glyphicon glyphicon-heart-empty"></span></th>
                        </tr>
                    </tfoot>
                    <tbody>
                        {% for atividade in atividades %}
                        <tr>
                            {% if atividade.imagem is not null %}
                            <td><img src="{{ asset(atividade.imagem, 'file') }}" width="100" height="100"></td>
                            {% else %}
                            <td width="100" height="100"></td>
                            {% endif %}
                            <td>{{ atividade.atividade}}</td>
                            <td>{{ atividade.valor}}</td>
                            {% if atividade['marcacoes'] is empty %}
                                <td class="info" id="seg_{{ atividade.id}}"><span></span></td>
                                <td class="info" id="ter_{{ atividade.id}}"><span></span></td>
                                <td class="info" id="qua_{{ atividade.id}}"><span></span></td>
                                <td class="info" id="qui_{{ atividade.id}}"><span></span></td>
                                <td class="info" id="sex_{{ atividade.id}}"><span></span></td>
                                <td class="info" id="sab_{{ atividade.id}}"><span></span></td>
                                <td class="info" id="dom_{{ atividade.id}}"><span></span></td>
                            {% else %}
                                {% for marcacao in atividade['marcacoes'] %}
                                    <!-- Segunda -->
                                    {% if marcacao.segunda == 'S' %}    
                                        <td class="success" id="seg_{{ atividade.id}}"><span class="glyphicon glyphicon-thumbs-up"></span></td>
                                    {% elseif marcacao.segunda == 'N' %}    
                                        <td class="danger" id="seg_{{ atividade.id}}"><span class="glyphicon glyphicon-thumbs-down"></span></td>
                                    {% else %}
                                        <td class="info" id="seg_{{ atividade.id}}"><span></span></td>
                                    {% endif %}
                                    <!-- Terca -->
                                    {% if marcacao.terca == 'S' %}    
                                        <td class="success" id="ter_{{ atividade.id}}"><span class="glyphicon glyphicon-thumbs-up"></span></td>
                                    {% elseif marcacao.terca == 'N' %}    
                                        <td class="danger" id="ter_{{ atividade.id}}"><span class="glyphicon glyphicon-thumbs-down"></span></td>
                                    {% else %}
                                        <td class="info" id="terca_{{ atividade.id}}"><span></span></td>
                                    {% endif %}
                                    <!-- Quarta -->
                                    {% if marcacao.quarta == 'S' %}    
                                        <td class="success" id="qua_{{ atividade.id}}"><span class="glyphicon glyphicon-thumbs-up"></span></td>
                                    {% elseif marcacao.quarta == 'N' %}    
                                        <td class="danger" id="qua_{{ atividade.id}}"><span class="glyphicon glyphicon-thumbs-down"></span></td>
                                    {% else %}
                                        <td class="info" id="qua_{{ atividade.id}}"><span></span></td>
                                    {% endif %}
                                    <!-- Quinta -->
                                    {% if marcacao.quinta == 'S' %}    
                                        <td class="success" id="qui_{{ atividade.id}}"><span class="glyphicon glyphicon-thumbs-up"></span></td>
                                    {% elseif marcacao.quinta == 'N' %}    
                                        <td class="danger" id="qui_{{ atividade.id}}"><span class="glyphicon glyphicon-thumbs-down"></span></td>
                                    {% else %}
                                        <td class="info" id="qui_{{ atividade.id}}"><span></span></td>
                                    {% endif %}
                                    <!-- Sexta -->
                                    {% if marcacao.sexta == 'S' %}    
                                        <td class="success" id="sex_{{ atividade.id}}"><span class="glyphicon glyphicon-thumbs-up"></span></td>
                                    {% elseif marcacao.sexta == 'N' %}    
                                        <td class="danger" id="sex_{{ atividade.id}}"><span class="glyphicon glyphicon-thumbs-down"></span></td>
                                    {% else %}
                                        <td class="info" id="sex_{{ atividade.id}}"><span></span></td>
                                    {% endif %}
                                    <!-- Sabado -->
                                    {% if marcacao.sabado == 'S' %}    
                                        <td class="success" id="sab_{{ atividade.id}}"><span class="glyphicon glyphicon-thumbs-up"></span></td>
                                    {% elseif marcacao.sabado == 'N' %}    
                                        <td class="danger" id="sab_{{ atividade.id}}"><span class="glyphicon glyphicon-thumbs-down"></span></td>
                                    {% else %}
                                        <td class="info" id="sab_{{ atividade.id}}"><span></span></td>
                                    {% endif %}
                                    <!-- Domingo -->
                                    {% if marcacao.domingo == 'S' %}    
                                        <td class="success" id="dom_{{ atividade.id}}"><span class="glyphicon glyphicon-thumbs-up"></span></td>
                                    {% elseif marcacao.domingo == 'N' %}    
                                        <td class="danger" id="dom_{{ atividade.id}}"><span class="glyphicon glyphicon-thumbs-down"></span></td>
                                    {% else %}
                                        <td class="info" id="dom_{{ atividade.id}}"><span></span></td>
                                    {% endif %}
                                {% endfor %}
                            {% endif %}
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            {% else %}
            <div class="post-preview">
                <br />
                <p class="post-meta" align="center">Nenhuma atividade cadastrada</p>
            </div>
            {% endif %}
        </div>
    </div>
{% endblock %}

{% block rodape %}
<footer>
    <div class="container">
        <div class="row" align="center">
            <p>Vc faz parte de uma comunidade com muitas outras crianças, jovens e adolescentes</p>
        </div>
    </div>
</footer>
{% endblock %}

{% extends 'leiaute.twig' %}
{% block titulo %}code.education - Curso de PHP - Login{% endblock %}
{% block conteudo %}
<div class="container">
    <div class="row">
        <div class="col-lg-4 col-lg-offset-4">
            <form class="form-signin" name="frmLogin" action="login/autenticar">
                <h4 class="form-signin-heading">Já é cadastrado?</h4>
                <label for="inputEmail" class="sr-only">Email</label>
                <input type="email" id="inputEmail" class="form-control" placeholder="Email" required autofocus>

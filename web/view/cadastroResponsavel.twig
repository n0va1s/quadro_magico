{% extends 'leiaute.twig' %}
{% block titulo %}Um desejo por semana - Responsável{% endblock %}

{% block topo %}
    <!-- Page Header -->
    <!-- Set your background image for this header on the line below. -->
    <header class="page-header" style="background-image: url('{{ asset('topo_reduzido.png', 'img') }}')">
    </header>
{% endblock %}

{% block conteudo %}
    <!-- Main Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <form name="frmQuadro" action="{{ path('responsavelSalvar')}}" method="POST">
                    <h4>Informações do responsável</h4>
                    <label for="nome" class="sr-only">Nome</label>
                    <input type="text" name="nome" class="col-lg-6" placeholder="Nome" autofocus required data-validation-required-message="Qual o seu nome?">
                    <label for="email" class="sr-only">Email</label>
                    <input type="email" name="email" class="col-lg-6" placeholder="Email" required data-validation-required-message="Qual o seu email?">
                    <label for="senha" class="sr-only">Senha</label>
                    <input type="password" name="senha" class="col-lg-4" placeholder="Senha" required data-validation-required-message="Informe uma senha">
                    <label for="confirmacao" class="sr-only">Confirmação</label>
                    <input type="password" name="confirmacao" class="col-lg-4" placeholder="Confirmação" required data-validation-required-message="Informe uma senha">
                    <label for="UF" class="sr-only">UF</label>
                    <input type="text" name="uf" class="col-lg-4" placeholder="UF" required data-validation-required-message="Onde vc mora?">
                    <label for="genero" class="sr-only">Gênero</label>
                    <select name="genero" class="col-lg-2">
                        <option value="">Gênero</option>
                        <option value="M">Masculino</option>
                        <option value="F">Feminino</option>
                    </select>
                    <label for="parentesco" class="sr-only">Parentesco</label>
                    <select name="parentesco" class="col-lg-4">
                        <option value="">Parentesco</option>
                        <option value="P">Pai</option>
                        <option value="M">Mãe</option>
                        <option value="A">Avô/Avó</option>
                        <option value="T">Tio/Tia</option>
                        <option value="D">Padrinho/Madrinha</option>
                        <option value="T">Tutor</option>
                        <option value="O">Outro</option>
                    </select>
                    <label for="expectativa" class="sr-only">Sua principal expectativa</label>
                    <input type="text" name="expectativa" class="col-lg-6" placeholder="Minha expectativa é..." required data-validation-required-message="O que vc espera desenvolver com seu filho (a)?">
                    <div>&nbsp;</div>
                    <center>
                        <button class="btn btn-primary" type="submit">Cadastrar</button>
                    <center>
                    <input type="hidden" name="id" value="{% if id is defined %} {{ id }} {% endif %}">
                </form>
                {% if mensagem is defined %}
                <div class="alert alert-success">
                    {{ mensagem }}
                </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
